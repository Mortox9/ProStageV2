{% extends 'base.html.twig' %}
{% block contenu %}
<h1>Cette page affichera la liste des formations de l'IUT</h1>

<!-- On cells (`td` or `th`) -->
<table class="table table-light table-striped">
  <thead>
    <tr>
      <th scope="col">Nom</th>
      <th scope="col">Description</th>
    </tr>
  </thead>
  <tbody>
    {% for formationCourante in formations %}
    <tr class="table-light">
      <th scope="row"">
      <a class="nav-link" href="{{path('prostages_formationId',{id:formationCourante.id})}}">{{formationCourante.intitule}}</a>
      </td>
      <td class="table-light">{{formationCourante.description}}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
