{% extends 'base.html.twig' %}
{% block contenu %}
<h1>Cette page affiche la liste des entreprises proposant un stage</h1>
<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    {% for entrepriseCourtante in entreprises %}
    <div class="col-md-4">
      <img src="{{entrepriseCourtante.photo}}" alt="image {{entrepriseCourtante.nom}}">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{entrepriseCourtante.nom}}</h5>
        <p class="card-text">{{entrepriseCourtante.adresse}}</p>
        <p class="card-text"><small class="text-muted">{{entrepriseCourtante.telephone}}</small></p>
        <a href="{{path('prostages_entrepriseId',{'id':entrepriseCourtante.id})}}" class="btn btn-primary">Voir l'entreprise</a> <a href="{{path('prostages_modifEntreprise',{'id':entrepriseCourtante.id})}}" class="btn btn-success">Modifier l'entreprise</a>
      </div>
    </div>
  </div>
  {% endfor %}
</div>
{% endblock %}
